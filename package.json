{
  "name": "flashnote",
  "version": "2.3.0",
  "description": "FlashNote 2.3.0 - 现代化本地笔记应用",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && cross-env NODE_ENV=development electron .\"",
    "pre-build": "node scripts/pre-download-models.js",
    "electron-build": "npm run pre-build && npm run build && electron-builder",
    "repair-db": "node scripts/fix-corrupted-db.js",
    "check-db": "node scripts/check-database.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "react",
    "notes",
    "markdown"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@excalidraw/excalidraw": "^0.18.0",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@tiptap/extension-highlight": "^3.10.7",
    "@tiptap/extension-placeholder": "^3.10.7",
    "@tiptap/react": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "compute-cosine-similarity": "^1.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "googleapis": "^165.0.0",
    "https-proxy-agent": "^7.0.6",
    "i18next": "^25.6.3",
    "ical.js": "^2.2.1",
    "lucide-react": "^0.542.0",
    "markdown-it": "^14.1.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-highlightjs": "^4.2.0",
    "markdown-it-mark": "^4.0.0",
    "p-limit": "^7.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.3.5",
    "react-markdown": "^10.1.0",
    "react-window": "^1.8.10",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tsdav": "^2.1.6",
    "vite": "^6.3.5",
    "yup": "^1.7.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.flashnote.app",
    "productName": "FlashNote",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": "**/*"
      },
      {
        "from": "logo.png",
        "to": "logo.png"
      },
      {
        "from": "assets/",
        "to": "assets/"
      },
      {
        "from": "plugins/examples",
        "to": "plugins/examples",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "plugins/registry.json",
        "to": "plugins/registry.json"
      },
      {
        "from": "models/",
        "to": "models/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "icon": "logo.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "uninstallDisplayName": "FlashNote 2.3.0",
      "include": "build/installer.nsh"
    }
  }
}
