{
  "id": "pattern-theme",
  "name": "主题外观",
  "version": "1.0.0",
  "description": "为 FlashNote 添加炫酷的几何花纹背景主题，支持多种花纹样式切换",
  "author": {
    "name": "FlashNote 团队",
    "url": "https://github.com/Xperiamol"
  },
  "license": "MIT",
  "homepage": "https://github.com/Xperiamol",
  "repository": "https://github.com/Xperiamol/flashnote",
  "icon": "icon.svg",
  "entry": "index.js",
  "permissions": [
    "ui:theme",
    "ui:open-window",
    "storage:read",
    "storage:write",
    "notifications:show"
  ],
  "commands": [
    {
      "id": "pattern-theme.toggle",
      "title": "切换主题外观",
      "description": "启用或禁用背景花纹效果",
      "icon": "palette",
      "surfaces": [
        "command-palette"
      ]
    },
    {
      "id": "pattern-theme.next-style",
      "title": "下一个花纹样式",
      "description": "切换到下一个花纹样式",
      "icon": "navigate_next",
      "surfaces": [
        "command-palette"
      ]
    },
    {
      "id": "pattern-theme.settings",
      "title": "主题外观设置",
      "description": "调整花纹的透明度和样式",
      "icon": "tune",
      "surfaces": [
        "command-palette"
      ]
    }
  ],
  "minAppVersion": "2.1.0"
}